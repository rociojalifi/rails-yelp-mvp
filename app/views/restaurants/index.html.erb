<div class="container">
  <h1>Restaurants</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone Number</th>
        <th>Category</th>
      </tr>
    </thead>
    <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone_number %></td>
        <td><%= restaurant.category %></td>
        <td><%= link_to 'Show', restaurant, class: "btn btn-primary"%></td> 
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Do you want to delete this Restaurant?' }, class: "btn btn-primary" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <br>
  <%= link_to 'Add Restaurant', new_restaurant_path, class: "btn btn-primary"  %>
</div>
